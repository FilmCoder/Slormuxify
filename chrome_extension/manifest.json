{
    "name": "Slormuxify",
    "version": "1.0",
    "description": "Step aside English. Slormuxify was built at its core to be the happiest (and silliest) language on Earth and to promote love, tolerance, and swag.",
    "manifest_version": 2,
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "libraries/lodash-core.min.js",
                "utils.js",
                "slormux_translation_engine.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
  }